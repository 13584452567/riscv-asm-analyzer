{
  "name": "riscv-asm-analyzer",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "l10n": "./i10n",
  "contributes": {
    "commands": [
      {
        "command": "riscv-asm-analyzer.openSidebar",
        "title": "%command.openSidebar.title%"
      },
      {
        "command": "riscv-asm-analyzer.loadSelection",
        "title": "%command.loadSelection.title%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riscvAsmAnalyzer",
          "title": "%viewContainer.riscvAsmAnalyzer.title%",
          "icon": "images/riscv-view.svg"
        }
      ]
    },
    "views": {
      "riscvAsmAnalyzer": [
        {
          "id": "riscvAsmAnalyzer.view",
          "name": "%view.riscvAsmAnalyzer.view.name%",
          "type": "webview",
          "icon": "images/riscv-view.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "riscv-asm-analyzer.loadSelection",
          "when": "editorHasSelection",
          "group": "navigation@95"
        }
      ],
      "editor/title": [
        {
          "command": "riscv-asm-analyzer.loadSelection",
          "when": "editorHasSelection",
          "group": "navigation@95"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "riscvAsmAnalyzer.cliPath": {
          "type": "string",
          "default": "",
          "description": "%configuration.cliPath.description%"
        },
        "riscvAsmAnalyzer.defaultArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%configuration.defaultArgs.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
