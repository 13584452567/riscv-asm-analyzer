{
  "name": "riscv-asm-analyzer",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "0.0.1",
  "publisher": "ZiCai",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:riscv-asm-analyzer.openSidebar",
    "onCommand:riscv-asm-analyzer.loadSelection",
    "onView:riscvAsmAnalyzer.view"
  ],
  "l10n": "./i10n",
  "repository": {
    "type": "git",
    "url": "https://github.com/13584452567/riscv-asm-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/13584452567/riscv-asm-analyzer/issues"
  },
  "homepage": "https://github.com/13584452567/riscv-asm-analyzer#readme",
  "keywords": [
    "riscv",
    "asm",
    "assembly",
    "risc-v",
    "analyzer"
  ],
  "license": "MIT",
  "contributes": {
    "commands": [
      {
        "command": "riscv-asm-analyzer.openSidebar",
        "title": "%command.openSidebar.title%"
      },
      {
        "command": "riscv-asm-analyzer.loadSelection",
        "title": "%command.loadSelection.title%"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "riscvAsmAnalyzer",
          "title": "%viewContainer.riscvAsmAnalyzer.title%",
          "icon": "images/Assembly-RISCV.svg"
        }
      ]
    },
    "views": {
      "riscvAsmAnalyzer": [
        {
          "id": "riscvAsmAnalyzer.view",
          "name": "%view.riscvAsmAnalyzer.view.name%",
          "type": "webview",
          "icon": "images/Assembly-RISCV.svg"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "riscv-asm-analyzer.loadSelection",
          "when": "editorHasSelection",
          "group": "navigation@95"
        }
      ],
      "editor/title": [
        {
          "command": "riscv-asm-analyzer.loadSelection",
          "when": "editorHasSelection",
          "group": "navigation@95"
        }
      ]
    },
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "riscvAsmAnalyzer.numberBase": {
          "type": "string",
          "enum": ["hex", "dec"],
          "default": "hex",
          "description": "Default number base used to display immediates and offsets in the analyzer UI."
        }
        
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
